@page
@using Acme.BookAPPStore.Localization
@using Acme.BookAPPStore.Web.Pages.Books
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Acme.BookAPPStore.Web.Pages.Books.DetailsModel
@inject IStringLocalizer<BookAPPStoreResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Book" asp-page="/Books/DetailsModal">
    <abp-modal>
        <abp-modal-header title="@L["Details"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-input asp-for="Name" disabled/>
            <abp-input asp-for="PublishDate" disabled />
            <abp-input asp-for="Price" disabled />
        </abp-modal-body>
    </abp-modal>
</abp-dynamic-form>
